@model IEnumerable<clinic_management.Models.MedCheck>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Medical Check-ups @if (Convert.ToInt32(Session["usertype"].ToString()) == 3)
            {@Html.ActionLink("Create New", "Create", "MedChecks", null, new { @class = "btn btn-default pull-right" })}
        </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@if (Convert.ToInt32(Session["usertype"].ToString()) == 3)
{
    <div class="row">
        <table class="table" id="tableMedCheck">
            <thead>
                <tr>
                    <th>
                        @Html.Label("Patient")
                    </th>
                    <th>
                        @Html.Label("Staff")
                    </th>
                    <th>
                        @Html.Label("Date of Visit")
                    </th>
                    <th>
                        @Html.Label("Complaint")
                    </th>
                    <th>
                        @Html.Label("Status")
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient.PatientFirst) @Html.DisplayFor(modelItem => item.Patient.PatientLast)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Staff.StaffFirst) @Html.DisplayFor(modelItem => item.Staff.StaffLast)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTimeOfVisit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Complaint)
                        </td>
                        <td>
                            @if (item.MedCheckStatus == 1)
                            {
                                <label>Ongoing</label>
                            }
                            @if (item.MedCheckStatus == 2)
                            {
                                <label>Done</label>
                            }
                            @if (item.MedCheckStatus == 3)
                            {
                                <label>Cancelled</label>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.MedCheckID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.MedCheckID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


