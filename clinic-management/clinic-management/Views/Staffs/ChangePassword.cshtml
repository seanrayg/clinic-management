@model clinic_management.Models.Staff

@{
    ViewBag.Title = "ChangePassword";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">User Accounts</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.StaffID)

            <div class="form-group">
                @Html.LabelFor(model => model.StaffPassword, "New Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.StaffPassword, new { htmlAttributes = new { @class = "form-control", type = "password", @Value = "" } })
                    @Html.ValidationMessageFor(model => model.StaffPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Confirm Password</label>
                <div class="col-md-5">
                    <input type="password" class="form-control" name="confirm_password" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <span class="field-validation-valid text-danger" data-valmsg-replace="true">@ViewBag.ErrorMessage</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>