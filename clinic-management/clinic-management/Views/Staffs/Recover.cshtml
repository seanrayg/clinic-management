@model IEnumerable<clinic_management.Models.Staff>

@{
    ViewBag.Title = "Recover";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Recover</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <table class="table" id="tableStaffs">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffLast)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffFirst)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StaffMid)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffLast)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffFirst)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffMid)
                        </td>
                        <td>
                            @Html.ActionLink("Recover", "Recover", new { id = item.StaffID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-3"></div>
</div>

<script>
    $(document).ready(function () {
        $('#tableStaffs').DataTable();
    });
</script>
