@model clinic_management.Models.ModelContainer

@{
    ViewBag.Title = "EditSupply";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Update Supply</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Supply.SupplyID)

            <div class="form-group" style="display: none;">
                @Html.LabelFor(model => model.Supply.ItemID, "Item ID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Supply.ItemID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Supply.ItemID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Supply.SupplyQuantity, "Quantity", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    @Html.EditorFor(model => model.Supply.SupplyQuantity, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                    @Html.ValidationMessageFor(model => model.Supply.SupplyQuantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Supply.ReceivedDate, "Received Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <div class="input-group date" data-date-format="dd.mm.yyyy">
                        @Html.EditorFor(model => model.Supply.ReceivedDate, new { htmlAttributes = new { @class = "form-control", placeholder = "YYYY-MM-DD" } })
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.Supply.ReceivedDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Supply.ExpirationDate, "Expiration Date", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-5">
                    <div class="input-group date" data-date-format="dd.mm.yyyy">
                        @Html.EditorFor(model => model.Supply.ExpirationDate, new { htmlAttributes = new { @class = "form-control", placeholder = "YYYY-MM-DD" } })
                        <div class="input-group-addon">
                            <span class="glyphicon glyphicon-th"></span>
                        </div>
                    </div>
                    @Html.ValidationMessageFor(model => model.Supply.ExpirationDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <input type="hidden" name="oldSupplyQuantity" value="@Model.Supply.SupplyQuantity" />

            <div class="form-group">
                <label class="control-label col-md-2">Reason</label>
                <div class="col-md-5">
                    <input name="ChangeReason" type="text" class="form-control" />
                    <span class="field-validation-valid text-danger">@ViewBag.ErrorMessage</span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                    @Html.ActionLink("Back", "Supply", new { id = Model.Supply.ItemID }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(function () {
        $('.input-group.date').datepicker({
            format: 'yyyy-mm-dd'
        });
    });
</script>