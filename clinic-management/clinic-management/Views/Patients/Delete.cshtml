@model clinic_management.Models.Patient

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Patients</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div>
        <label>Are you sure you want to delete this?</label>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Patient Type")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientType.TypeName)
            </dd>

            <dt>
                @Html.DisplayName("First Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientFirst)
            </dd>

            <dt>
                @Html.DisplayName("Middle Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientMid)
            </dd>

            <dt>
                @Html.DisplayName("Last Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientLast)
            </dd>

            <dt>
                @Html.DisplayName("Gender")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientGender)
            </dd>

            <dt>
                @Html.DisplayName("Birthdate")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientBDate)
            </dd>

            <dt>
                @Html.DisplayName("Address")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientAddrss)
            </dd>

            <dt>
                @Html.DisplayName("College")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PCollege.CollegeName)
            </dd>
            <dt>
                @Html.DisplayName("Class")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PatientClass)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>
