@model IEnumerable<clinic_management.Models.Patient>

@{
    ViewBag.Title = "Recover";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Recover</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <table class="table" id="tablePatients">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PatientID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PatientLast)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PatientFirst)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PatientMid)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientLast)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientFirst)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PatientMid)
                        </td>
                        <td>
                            @Html.ActionLink("Recover", "Recover", new { id = item.PatientID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-3"></div>
</div>

<script>
    $(document).ready(function () {
        $('#tablePatients').DataTable();
    });
</script>
